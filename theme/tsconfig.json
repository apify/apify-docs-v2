{
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": false,
        "declaration": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "outDir": "./dist",
        "allowJs": true,
        "jsx": "react-jsx",
    },
    "include": ["./src/*", "./src/**/*"],
}